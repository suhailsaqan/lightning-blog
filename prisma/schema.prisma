generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  uid       String      @id 
  slug      String      @unique
  title     String?
  text      String?
  published Boolean?     @default(false)
  price     Int?
}

model Payment {
  uid           String      @id 
  slug          String      
  invoice_hash  String?     @unique
  invoice       String?     @unique
}